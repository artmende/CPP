CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++98 -Wno-unused-parameter

SRCS =	./Base.cpp \
		./A.cpp \
		./B.cpp \
		./C.cpp \
		./main.cpp \

OBJS = $(SRCS:.cpp=.o)

RM = rm -f

NAME = Identify_real_type

all: $(NAME)

$(NAME): $(OBJS)
	@$(CXX) -o $(NAME) $(CXXFLAGS) $(OBJS)

.cpp.o:
	@$(CXX) $(CXXFLAGS) -c $< -o $(<:.cpp=.o)

clean:
	@$(RM) $(OBJS)

fclean: clean
	@$(RM) $(NAME)

re: fclean all

.PHONY: clean fclean re all
