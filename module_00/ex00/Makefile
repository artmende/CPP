CC = c++

CFLAGS = -Wall -Wextra -Werror

SRCS = ./megaphone.cpp

OBJS = $(SRCS:.cpp=.o)

RM = rm -f

NAME = megaphone

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) -o $(NAME) $(CFLAGS) $(OBJS)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: clean fclean re all
