CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++98

SRCS =	./AMateria.cpp \
		./Character.cpp \
		./Cure.cpp \
		./Ice.cpp \
		./MateriaSource.cpp \
		./main.cpp \

OBJS = $(SRCS:.cpp=.o)

RM = rm -f

NAME = ex03

all: $(NAME)

$(NAME): $(OBJS)
	@$(CXX) -o $(NAME) $(CXXFLAGS) $(OBJS)

.cpp.o:
	@$(CXX) $(CXXFLAGS) -c $< -o $(<:.cpp=.o)

clean:
	@$(RM) $(OBJS)

fclean: clean
	@$(RM) $(NAME)

re: fclean all

.PHONY: clean fclean re all
